/******************************************************************************
other way of initialisation of vector of pair
*******************************************************************************/
#include <iostream>
using namespace std;
#include <vector>

void print(vector<pair<int,int>>arr){
    cout<<"size of array:"<<arr.size()<<endl;
    for(int i=0;i<arr.size();i++)
    {
        cout<<arr[i].first<<" ->"<<arr[i].second<<endl;
        cout<<endl;
    }
}

int main()
{
    
    vector<pair<int,int>>v={{1,2},{3,4},{5,6},{7,8}};
    
    print(v);
    return 0;

}

// output

// size of array:4
// 1 ->2

// 3 ->4


// 5 ->6

// 7 ->8
